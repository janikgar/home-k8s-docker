{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "schedule": [
    "* * * * 5"
  ],
  "hostRules": [
    {
      "matchHost": "quay.io",
      "username": "janikgar",
      "password": "{{ secrets.QUAY_TOKEN }}"
    }
  ],
  "packageRules": [
    {
      "matchDatasources": ["docker"],
      "matchPackageNames": ["postgres"],
      "versioning": "semver-coerced"
    }
  ]
}
